{
  "name": "couchloop-eq-mcp",
  "version": "1.2.0",
  "description": "Behavioral governance layer for LLMs - monitors for hallucination, inconsistency, tone drift, and unsafe reasoning while managing stateful AI sessions",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "couchloop-eq-mcp": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.js.map",
    "dist/index.d.ts.map",
    "dist/auth/",
    "dist/clients/",
    "dist/db/client.*",
    "dist/developer/",
    "dist/resources/",
    "dist/server/*.js",
    "dist/server/*.d.ts",
    "dist/server/*.map",
    "dist/server/middleware/",
    "dist/tools/*.js",
    "dist/tools/*.d.ts",
    "dist/tools/*.map",
    "!dist/tools/sendMessage-complex*",
    "!dist/tools/sendMessage-revised*",
    "!dist/tools/sendMessage-truly*",
    "dist/types/",
    "dist/utils/",
    "dist/workflows/",
    "README.md",
    "LICENSE",
    "run-mcp-server.sh",
    "assets/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "start:mcp": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "setup": "npm install && npm run build",
    "setup:db": "npm run db:push && npm run db:seed",
    "vercel": "vercel",
    "vercel:prod": "vercel --prod",
    "server": "tsx src/server/index.ts",
    "server:dev": "tsx watch src/server/index.ts",
    "security:check": "npm run security:secrets && npm run security:audit && npm run security:package",
    "security:secrets": "node -e \"const{execSync}=require('child_process');try{const r=execSync('grep -rE \\\"(sk-|pk_live_|AKIA)[A-Za-z0-9]{20,}\\\" dist/ --include=*.js 2>/dev/null',{encoding:'utf8'});if(r.trim()){console.log(r);console.log('❌ Hardcoded secrets found!');process.exit(1)}}catch(e){}console.log('✅ No hardcoded secrets found')\"",
    "security:audit": "npm audit --audit-level=high || true",
    "security:package": "npm pack --dry-run 2>&1 | grep -E 'schema\\.|seed\\.|migrate\\.|oauth/' && echo '❌ Sensitive files in package!' && exit 1 || echo '✅ Package clean'",
    "prepublishOnly": "npm run build && npm run security:check"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-safety",
    "ai-governance",
    "hallucination-detection",
    "chatgpt",
    "claude",
    "llm-safety",
    "behavioral-governance",
    "conversation",
    "state-management"
  ],
  "author": "Greg Wisenberg <greg@couchloop.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wisenbergg/couchloop-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/wisenbergg/couchloop-mcp/issues"
  },
  "homepage": "https://github.com/wisenbergg/couchloop-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.0.4",
    "pg": "^8.16.3",
    "postgres": "^3.4.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/node": "^3.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.56.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vercel": "^32.0.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  }
}
